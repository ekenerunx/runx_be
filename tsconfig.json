{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["es5", "es6"],
    "target": "es6",
    "sourceRoot": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["seeding"]
}
